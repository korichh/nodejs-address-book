<div class="action-box">
    <div class="action-ui">
        <button class="action-btn close" data-closeaction><img src="images/icons/back.svg" alt="icon back" loading="lazy" width="30" height="30"></button>
        <button class="action-btn edit"><img src="images/icons/edit.svg" alt="icon back" loading="lazy" width="30" height="30"></button>
    </div>
    <div class="user-box" data-id="<%= user.id %>">
        <div class="user-avatar"><img src="<%= `images/users/${user.avatar}` %>" alt="<%= user.fullname %>" loading="lazy" width="100" height="100"></div>
        <h2 class="user-fullname"><%= user.fullname %></h2>
        <div class="user-tab tab">
            <div class="tab-nav">
                <button class="_active" data-for="home">Home</button>
                <button data-for="work">Work</button>
                <button data-for="about">About</button>
            </div>
            <div data-id="home" class="tab-content _active">
                <div class="row">
                    <div data-label="Phone number" class="property number"><span><%= user.home.number %></span></div>
                    <div class="icon"><img src="images/icons/phone.svg" alt="icon phone" loading="lazy" width="35" height="35"></div>
                </div>
                <div class="row">
                    <div data-label="Address" class="property address"><span><%= user.home.address == '' ? '-' : user.home.address %></span></div>
                    <div class="icon"><img src="images/icons/address.svg" alt="icon address" loading="lazy" width="35" height="35"></div>
                </div>
            </div>
            <div data-id="work" class="tab-content">
                <div class="row">
                    <div data-label="Phone number" class="property number"><span><%= user.work.number == '' ? '-' : user.work.number %></span></div>
                    <div class="icon"><img src="images/icons/phone.svg" alt="icon phone" loading="lazy" width="35" height="35"></div>
                </div>
                <div class="row">
                    <div data-label="Address" class="property address"><span><%= user.work.address == '' ? '-' : user.work.address %></span></div>
                    <div class="icon"><img src="images/icons/address.svg" alt="icon address" loading="lazy" width="35" height="35"></div>
                </div>
            </div>
            <div data-id="about" class="tab-content">
                <div class="row">
                    <div data-label="About" class="property about"><span><%= user.about == '' ? '-' : user.about %></span></div>
                </div>
            </div>
        </div>
        <button data-closeaction class="btn user-delete">Delete Contact</button>
    </div>
</div>